<%= form_for @idea do |f| %>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>

    <div class="form-group">
      <%= f.label :tags %>
      <%= f.text_field :tag_list, :class => 'form-control' %>
    </div>

  <%= f.submit "Save", :class => 'btn btn-primary' %>
<% end %>