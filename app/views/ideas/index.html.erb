<div class="jumbotron">
  <div class="page-header">
    <h2>All Ideas</h2>
  </div>

  <div>
    <span class="glyphicon glyphicon-tags"> </span>

    <% @tags.each do |tag| %>
        <button class="btn btn-info"><%= tag.name %></button>
    <% end %>
  </div>

</div>




<br>
<div class="row">

  <div id="ideas" class="transitions-enabled">
    <% @ideas.each do |idea| %>

          <div class="box">

            <%= image_tag idea.avatar.url(:medium) %>
            <div class="panel-body">
              <h3><%= link_to idea.content, idea %></h3>
              <p><%= idea.description %></p>
              <p><%= link_to '...', idea, class: 'btn btn-primary' %></p>

              <div class="tag">
                <span class="glyphicon glyphicon-tags"></span>
                <% idea.tags.any? %> 
                <% idea.tags.each do |tag| %> 
                    <span class="label label-success"><%= tag.name %></span>
                <% end %>
              </div>
            </div>
          </div>

     <% end %>
  </div>
</div>

<script>

  var keyword = '';

  keyword = '<%= j @searchkey %>';

  if ( keyword != '') {
    document.getElementById('search_bar').value = keyword;
  }
</script>