<div class="page-header">
  <h1>Show Idea</h1>
</div>

<h2><%= @idea.content %></h2>
<p><%= @idea.description %></p>

<h3>Tags</h3>
<% @idea.tags.any? %> 
<% @idea.tags.each do |tag| %> 
    <%= link_to tag.name, tag_path(tag) %> 
<% end %>
<p><%= link_to 'Update', edit_idea_path %></p>
<p><%= link_to 'Delete', idea_path(@idea), method: :delete, data: { confirm: 'Are you sure?'} %></p>
<p><%= link_to 'All Ideas', ideas_index_path %></p>